<div class="row justify-content-center">
    <div class="col-md-3 col-lg-3 col-sm-12 m-2">
        <h3 class="text-success text-center">Sign In</h3>
        <div class="card shadow">
            <div class="card-body">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" placeholder="Entre your E-mail"
                            class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" placeholder="password"
                            class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-md btn-success">
                            Sign In
                            <i class="fa fa-arrow-circle-right"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="card mt-2">
            <div class="card-body">
                <p>I don't have an account <a href="/users/register">Sign Up</a></p>
            </div>
        </div>
    </div>
</div>